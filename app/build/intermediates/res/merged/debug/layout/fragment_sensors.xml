<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SensorsFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Sensors"
        android:id="@+id/textView5"
        android:textSize="@dimen/abc_text_size_large_material"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal|top" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No temperature yet"
        android:id="@+id/textViewTemperature"
        android:textSize="@dimen/abc_text_size_medium_material"
        android:layout_gravity="left|top"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No humidity yet"
        android:id="@+id/textViewHumidity"
        android:textSize="@dimen/abc_text_size_medium_material"
        android:layout_gravity="left|top"
        android:layout_below="@+id/textViewTemperature"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No pressure yet"
        android:id="@+id/textViewPressure"
        android:textSize="@dimen/abc_text_size_medium_material"
        android:layout_gravity="left|top"
        android:layout_below="@+id/textViewHumidity"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No internal temperature yet"
        android:id="@+id/textViewBmpTemperature"
        android:textSize="@dimen/abc_text_size_medium_material"
        android:layout_gravity="left|top"
        android:layout_below="@+id/textViewPressure"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:id="@+id/buttonRetrieve"
        android:layout_below="@+id/textViewBmpTemperature"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Update for information"
        android:id="@+id/textViewStatus"
        android:textSize="@dimen/abc_text_size_large_material"
        android:layout_gravity="center_horizontal|top"
        android:layout_below="@+id/buttonRetrieve"
        android:layout_alignParentStart="true" />

</RelativeLayout>
